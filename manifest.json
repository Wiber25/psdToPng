{
  "manifest_version": 3,
  "name": "Easy PSD Converter",
  "version": "1.0",
  "description": "Convert PSD files to PNG easily. Support wiberwiber to unlock unlimited conversions!",
  "permissions": [
    "storage",
    "identity"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}